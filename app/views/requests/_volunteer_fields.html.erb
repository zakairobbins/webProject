<div class="form-section fields">
  <div class="row">
    <div class="small-12 medium-6 columns">
      <%= f.hidden_field :id %>
      <%= f.label :organization %>
      <%= f.text_field :organization, class: 'required' %>
      <%= f.label :location %>
      <%= f.text_area :location, rows: '3', cols: '28' %>
    </div>

    <div class="small-12 medium-6 columns">
      <%= f.label :start_date %>
      <%= f.date_field :start_date %>
      <%= f.label :end_date %>
      <%= f.date_field :end_date %>
      <%= f.label :duties %>
      <%= f.text_area :duties, rows: '3', cols: '28' %>
    </div>

    <a href="#" class="remove-link"><%= fa_icon "remove" %> remove</a>
  </div>
</div>
