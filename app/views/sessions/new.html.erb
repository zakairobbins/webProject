<h2>login</h2>

<%= form_for :session, url: sessions_path, html: {class: 'pure-form'} do |f| %>

    <p>
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </p>

    <p>
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </p>

    <p>
      <%= f.submit class: 'pure-button', value: 'Sign in' %>
    </p>
  <% end %>
